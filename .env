# Style License Environment Variables
# This file is for local development. Do NOT commit this file to version control.

# =============================================================================
# Django Backend Configuration
# =============================================================================

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-local-dev-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/stylelicense_db
POSTGRES_DB=stylelicense_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# =============================================================================
# RabbitMQ Configuration
# =============================================================================

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_TRAINING_QUEUE=model_training
RABBITMQ_INFERENCE_QUEUE=image_generation

# =============================================================================
# AWS S3 Configuration (Using local mock or actual dev bucket)
# =============================================================================

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=stylelicense-local-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# Google OAuth Configuration
# =============================================================================

GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =============================================================================
# Toss Payment Configuration (Using test keys)
# =============================================================================

TOSS_CLIENT_KEY=test_ck_...
