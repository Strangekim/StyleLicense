# Style License Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Django Backend Configuration
# =============================================================================

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database
DATABASE_URL=postgresql://postgres:password@postgres:5432/stylelicense_db
POSTGRES_DB=stylelicense_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# =============================================================================
# RabbitMQ Configuration
# =============================================================================

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-rabbitmq-password
RABBITMQ_TRAINING_QUEUE=model_training
RABBITMQ_INFERENCE_QUEUE=image_generation

# =============================================================================
# AWS S3 Configuration
# =============================================================================

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=stylelicense-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# Google OAuth Configuration
# =============================================================================

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# =============================================================================
# Toss Payment Configuration
# =============================================================================

TOSS_CLIENT_KEY=your-toss-client-key
TOSS_SECRET_KEY=your-toss-secret-key

# =============================================================================
# Internal API Security
# =============================================================================

# Token for communication between AI servers and Backend
# Generate a strong random token (e.g., using uuidgen or python secrets)
INTERNAL_API_TOKEN=your-internal-api-token-here

# =============================================================================
# Error Monitoring
# =============================================================================

# Sentry DSN (optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================

VITE_API_BASE_URL=http://localhost:8000/api

# =============================================================================
# AI Servers Configuration (Training & Inference)
# =============================================================================

# Backend webhook endpoint
WEBHOOK_BASE_URL=http://backend:8000

# CUDA/GPU settings (if running locally)
CUDA_VISIBLE_DEVICES=0

# =============================================================================
# Production Only
# =============================================================================

# Domain name
DOMAIN_NAME=yourdomain.com

# Email for Let's Encrypt SSL
LETSENCRYPT_EMAIL=admin@yourdomain.com
